<div class="banner">
  <div class="container">
    <div class="row justify-content-between align-items-center mt-5">
      <div class="col-12 col-md-6">
        <%= image_tag 'washer.gif', crop: :fill, id: "washer" %>
      </div>
      <div class="col-12 col-md-6 ">
        <div class="d-flex flex-column justify-content-center">
          <h1>Don't let the wahser win, Join sockCiety! </h1>
          <p class= "text-center">Find the match to your lost sock.</p>
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary"  %>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <h1 style="color: #006DAA; margin-bottom:1em">Our Socks</h1>
  <div class="container">
    <div class="containerindex">
      <div class="dropdown">
        <h2>Filter</h2>
        <br>
        <form>
          <div class="form-group">
            <label for="exampleFormControlSelect1">sock size</label>
            <select class="form-control" id="exampleFormControlSelect1">
              <% Sock::SIZES.each do |x| %>
              <option><%= x %></option>
              <% end %>q
            </select>
          </div>


          <div class="form-group">
            <label for="exampleFormControlSelect1">Sock type</label>
            <select class="form-control" id="sock_type">
              <% Sock::SOCK_TYPE.each do |x| %>
              <option><%= x %></option>
              <% end %>
            </select>
          </div>

          <div class="form-group">
            <label for="exampleFormControlSelect1">Sock pattern</label>
            <select class="form-control" id="sock_pattern">
              <% Sock::SOCK_PATTERN.each do |x| %>
              <option><%= x %></option>
              <% end %>
            </select>
          </div>

          <div class="form-group">
            <label for="exampleFormControlSelect1">Season</label>
            <select class="form-control" id="season" value="">
              <% Sock::SEASON.each do |x| %>
              <option><%= x %></option>
              <% end %>
            </select>
          </div>
          <button type="submit" class="btn btn-primary mb-2">Filter</button>
        </form>

      </div>

      <div class="cards">
        <% @socks.each do |sock| %>
          <% if sock.bought == false %>
            <div class="card-sock">
              <% if sock.photo.file.nil? %>
              <%= link_to sock_path(sock) do  %>
                <%= image_tag 'logo.jpg', crop: :fill, height: 220, width: 300; %>
                <% end %>
              <% else %>
              <%= link_to sock_path(sock) do  %>
                <%= cl_image_tag sock.photo, crop: :fill, height: 220, width: 300; %>
                <% end %>
              <% end %>
              <div class="card-sock-infos">
                <div>
                  <h2><%= link_to sock.title, sock_path(sock)  %></h2>
                  <p> <%= sock.description %></p>
                </div>
                <h2 class="card-sock-pricing"> $<%= sock.price %></h2>
                <%= link_to profile_path(sock.user) do  %>
                  <% if sock.user.photo.file.nil? %>
                    <%= image_tag 'sock.png', height: 40, width: 25, crop: :fill, class:'card-sock-user avatar-bordered' %>
                  <% else %>
                    <%= cl_image_tag sock.user.photo, height: 40, width: 25, crop: :fill, class:'card-sock-user avatar-bordered'  %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

