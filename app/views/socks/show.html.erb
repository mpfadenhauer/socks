<div class="white-wrapper">
  <div class="container">
    <div class="row">
      <div class="sock-card">
        <%= cl_image_tag @sock.photo, height: 300, width: 400, crop: :fill %>

        <div class="card-product-infos">
          <div class="sock-info">
            <h2><%= @sock.title %></h2>
            <div class="detailed-info">
              <div class="detail">
                <i class="fas fa-palette"></i>
                <p><%= @sock.color %></p>
              </div>
              <div class="detail">
                <i class="fas fa-hashtag"></i>
                <p><%= @sock.pattern %></p>
              </div>
              <div class="detail">
                <i class="fas fa-cloud-sun"></i>
                <p><%= @sock.season %></p>
              </div>
            </div>
          </div>
          <div class="sock-description">
            <p><%= @sock.description %></p>
          </div>
          <div class="actions">
            <div class="sock-price">
              <p>$ <%= @sock.price %></p>
            </div>
            <div class="buy-sock">
              <%= link_to "Buy Sock", socks_path, method: :post, id:"buy-button"  %> <!-- sock_transactions_path, method: :post -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="all-reviews">
        <div class="sock-reviews">
        <h2>Reviews</h2>
          <div class="sock-review">
            <p>here could be your review written</p>
            <%  if @reviews %>
            <%= @reviews.each do |review| %>
              <div class="message">
                <%= image_tag "sock-placeholder.jpg", class: "message-avatar" %>
                <div class="message-name">
                  <p style="width: 70px; padding-left: 10px;"> <%= review.user.username %></p>
                </div>
                <div class="message-body">
                  <h3><%= review.content %></h3>
                </div>
                <div class="message-rating">
                  <p><%= raw '<i class="fa fa-star" aria-hidden="true"></i>' * review.stars %></p>
                </div>
              </div>
              <% end %>
            <% end %>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>



