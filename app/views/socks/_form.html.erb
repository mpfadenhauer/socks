<%= simple_form_for @sock do |s| %>
  <%= s.input :title %>
  <%= s.input :color %>
  <%= s.input :price %>
  <%= s.input :pattern, inclusion: { in ["Solid", "Striped", "Polko dots", "Other"] }  %>
  <%= s.input :min_size %>
  <%= s.input :max_size %>
  <%= s.input :description %>
  <%= s.input :sock_type, inclusion:{ in ["Over the knee", "Knee high", "Over the calf/Executive", "Mid-calf/Crew", "Quarter/Anklets", "Ped/Low cut", "Liner, Extra low cut", "Invisible/No-show", "Toe cover/Mute"] }  %>
  <%= s.input :brand %>
  <%= s.input :season, inclusion:{ in ["spring", "winter", "summer", "autumn"] } %>
<% end %>
